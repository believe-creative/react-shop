{% extends "../layouts/default.twig" %}

{% block content %}
	<div class="container">
		<div class="row">
			<div class="col-sm-10 col-sm-offset-1 col-md-8 col-md-offset-2">
				<article>
					<p>
						<a href="/blog">&larr; back to the blog</a>
					</p>
					<hr>
					{% if not data.product %}
						<h2>Invalid Post.</h2>
					{% else %}
						<header>
							<h1>{{ data.product.title }}</h1>
							<h5>Posted</h5>
							{% if data.product.publishedDate %}
								on {{ data.product.publishedDate|date("M d, Y") }}
							{% endif %}
							{% if data.product.categories and data.product.categories.length %}
								in
								{% for cat in data.product.categories %}
									<a href="/blog/{{ cat.key }}">{{ cat.name }}</a>
									{% if not loop.last %}, {% endif %}
								{% endfor %}
							{% endif %}
							{% if data.product.author %}
								by {{ data.product.author.name.first }}
							{% endif %}
						</header>
						<div class="post">
							{% if data.product.image.exists %}
								<div class="image-wrap">
									<img src="{{ data.product._.image.fit(750,450) }}" class="img-responsive">
								</div>
							{% endif %}
							{{ data.product.content.full | raw }}
						</div>
					{% endif %}
				</article>
			</div>
		</div>
	</div>
{% endblock %}
