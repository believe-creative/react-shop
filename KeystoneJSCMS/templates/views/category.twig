{% extends "../layouts/default.twig" %}

{% block intro %}
	<div class="container">
		{% set title = "Blog" %}
		{% if data.category %}
			{% set title = data.category.name %}
		{% endif %}
		<h1>{{ title }}</h1>
	</div>
{% endblock %}

{% block content %}
	<div class="container">
		<div class="row">
			<div class="col-sm-8 col-md-9">
				{% if (filters.category) and (data.category == false) %}
					<h3 class="text-muted">Invalid Category.</h3>
				{% else %}
					{% if data.products.results.length %}
						{% if data.products.totalPages > 1 %}
							<h4 class="text-weight-normal">Showing 
								<strong>{{ data.products.first }}</strong>
								to 
								<strong>{{ data.products.last }}</strong>
								of 
								<strong>{{ data.products.total }}</strong>
								posts.
							</h4>
						{% else %}
							<h4 class="text-weight-normal">Showing {{ utils.plural(data.products.results.length, "* post") }}.</h4>
						{% endif %}
						<div class="blog">
							{% for post in data.products.results %}
								<div class="post" data-ks-editable="editable(user, { list: 'Post', id: post.id })">
									<h2>
										<a href="/category/product/{{ post.slug }}">{{ post.title }}</a>
									</h2>
									<p class="lead text-muted">Posted
										{% if post.publishedDate %}
											<br>on {{ post._.publishedDate.format("MMMM Do, YYYY") }}
										{% endif %}
										{% if post.categories and post.categories.length %}
											<br>in
											{% for cat in post.categories %}
												<a href="/category/{{ cat.key }}">{{ cat.name }}</a>
												{% if not loop.last %}, {% endif %}
											{% endfor %}
										{% endif %}
										{% if post.author %}
											<br>by {{ post.author.name.first }}
										{% endif %}
									</p>
									{% if post.image.exists %}
										<img src="{{ post._.image.fit(160,160) }}" class="img pull-right">
									{% endif %}
									<p>{{ post.content.brief | striptags }}</p>
									{% if post.content.extended %}
										<p class="read-more">
											<a href="/category/product/{{ post.slug }}">Read more...</a>
										</p>
									{% endif %}
								</div>
							{% endfor %}
						</div>
						{% if data.products.totalPages > 1 %}
							<ul class="pagination">
								{% if data.products.previous %}
									<li>
										<a href="?page={{ data.products.previous }}">
											<span class="glyphicon glyphicon-chevron-left"></span>
										</a>
									</li>
								{% else %}
									<li class="disabled">
										<a href="?page=1">
											<span class="glyphicon glyphicon-chevron-left"></span>
										</a>
									</li>
                                                                {% endif %}
									{% for p in data.products.pages %}
										<li class="{% if data.products.currentPage == p %}active{% endif %}">
											<a href="?page={% if p == '...' %}{% if i %}{{ data.products.totalPages }}{% else %}1{% endif %}{% else %}{{ p }}{% endif %}">{{ p }}</a>
										</li>
									{% endfor %}
								{% if data.products.next %}
									<li>
										<a href="?page={{ data.products.next }}">
											<span class="glyphicon glyphicon-chevron-right"></span>
										</a>
									</li>
								{% else %}
									<li class="disabled">
										<a href="?page={{ data.products.totalPages }}">
											<span class="glyphicon glyphicon-chevron-right"></span>
										</a>
									</li>
								{% endif %}
							</ul>
						{% endif %}
					{% else %}
						{% if data.category %}
							<h3 class="text-muted">There are no posts in the category {{ data.category.name }}.</h3>
						{% else %}
							<h3 class="text-muted">There are no posts yet.</h3>
						{% endif %}
					{% endif %}
				{% endif %}
			</div>
			{% if data.categories.length %}
			<div class="col-sm-4 col-md-3">
				<h2>Categories</h2>
				<div class="list-group" style="margin-top: 70px;">
					<a href="/category" class="{% if not data.category %}active{% endif %} list-group-item">All Categories</a>
					{% for cat in data.categories %}
						<a href="/category/{{ cat.key }}" class="{% if data.category and data.category.id == cat.id %}active{% endif %} list-group-item">{{ cat.name }}</a>
					{% endfor %}
				</div>
			</div>
			{% endif %}
		</div>
	</div>
{% endblock %}
